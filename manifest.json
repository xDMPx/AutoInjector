{
    "manifest_version": 3,
    "name": "AutoInjector",
    "description": "Automatic injection of scripts and CSS",
    "version": "0.2.0",
    "background": {
        "scripts": ["background.js"],
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Click to open dashboard"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{632c8b71-85ce-4941-983f-3aac02d58830}"
        }
    }
}
